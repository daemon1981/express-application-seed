extends ../layout

block append links
    link(rel='stylesheet', href='jQuery-File-Upload/css/jquery.fileupload-ui.css')

block append scripts
    script(src="jQuery-File-Upload/js/vendor/jquery.ui.widget.js")
    script(src="jQuery-File-Upload/js/jquery.iframe-transport.js")
    script(src="jQuery-File-Upload/js/jquery.fileupload.js")
    script(src='/javascripts/profile.js')

block content
    section
        form.form-horizontal(method="POST", action="/profile")
            fieldset
                legend Profile
                    a.btn.pull-right(href="/forgot/password") Modify your password
                .control-group
                    .controls
                        - if (user.picture)
                            img.img-polaroid.picture(src="/user/"+user._id+"/picture/thumbnail/" + user.picture)
                        - else
                            img.img-polaroid(src="/user/default/picture/thumbnail/default.png")
                .control-group
                    label.control-label(for='picture') Picture
                    .controls
                        span.btn.btn-success.fileinput-button
                            i.glyphicon.glyphicon-plus
                            span Select a picture
                            input#fileupload(type="file", name="picture", data-url="/profile-picture")
                .control-group
                    label.control-label(for='firstName') First name
                    .controls
                        input#firstName(type='text', name='firstName', placeholder="First name", value=user.firstName)
                .control-group
                    label.control-label(for='lastName') Last name
                    .controls
                        input#lastName(type='text', name='lastName', placeholder="Last name", value=user.lastName)
                #files.files
                .control-group
                    input.btn(type="submit", value="Sauvegarder")
